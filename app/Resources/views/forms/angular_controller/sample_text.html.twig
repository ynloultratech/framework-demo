<div class="col-md-offset-3">
    <hr>
    <style>
        .strong {
            font-weight: bold;
        }

        .animate-switch-container {
            position: relative;
            background: white;
            border: 1px solid black;
            height: 60px;
            overflow: hidden;
        }

        .animate-switch {
            padding: 10px;
        }

        .animate-switch.ng-animate {
            transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s;

            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }

        .animate-switch.ng-leave.ng-leave-active,
        .animate-switch.ng-enter {
            top: -50px;
        }

        .animate-switch.ng-leave,
        .animate-switch.ng-enter.ng-enter-active {
            top: 0;
        }
    </style>
    <div ng-show="color == background" class="alert alert-danger">
        Background color and text color should be different.
    </div>
    <div ng-style="{'color':color}">
        <div class="animate-switch-container" ng-switch on="size" ng-style="{'background-color':background}">
            <h1 class="animate-switch" ng-switch-when="h1" ng-class="{strong:bold}">{{ '{{ text }}' }}</h1>
            <h2 class="animate-switch" ng-switch-when="h2" ng-class="{strong:bold}">{{ '{{ text }}' }}</h2>
            <h3 class="animate-switch" ng-switch-when="h3" ng-class="{strong:bold}">{{ '{{ text }}' }}</h3>
            <h4 class="animate-switch" ng-switch-when="h4" ng-class="{strong:bold}">{{ '{{ text }}' }}</h4>
            <h5 class="animate-switch" ng-switch-when="h5" ng-class="{strong:bold}">{{ '{{ text }}' }}</h5>
            <h6 class="animate-switch" ng-switch-when="h6" ng-class="{strong:bold}">{{ '{{ text }}' }}</h6>
        </div>
    </div>
</div>